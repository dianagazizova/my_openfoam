FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

gradSchemes
{
    grad(D)         Gauss linear; //leastSquares;
}

divSchemes
{
    default         Gauss linear;
    div(sigma)      Gauss linear;
}

laplacianSchemes
{
    laplacian(DD,D) Gauss linear orthogonal;
}

